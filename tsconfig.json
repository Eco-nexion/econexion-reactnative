{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": ["./*"],
            "@app/*": ["./app/*"],
            "@components": ["./src/components"],
            "@components/*": ["./src/components/*"],
            "@constants": ["./src/constants"],
            "@constants/*": ["./src/constants/*"],
            "@hooks": ["./src/hooks"],
            "@hooks/*": ["./src/hooks/*"],
            "@type": ["./src/types"],
            "@type/*": ["./src/types/*"],
            "@utils": ["./src/utils"],
            "@utils/*": ["./src/utils/*"],
            "@assets": ["./src/assets"],
            "@assets/*": ["./src/assets/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
